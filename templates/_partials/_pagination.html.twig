{% if nbrOfPages > 1 %}
	<nav aria-label="...">
		<ul class="pagination justify-content-end">
			<li class="page-item {{ (currentPage == 1) ? 'disabled' : ''}}">
				<a class="page-link" href="{{ path(path, {slug: slug, page: currentPage - 1}) }}">&laquo;</a>
			</li>
			{% for numOfPage in 1..nbrOfPages %}
				<li class="page-item {{ currentPage == numOfPage ? 'active' : ''}}">
					<a class="page-link" href="{{ path(path, {slug: slug, page: numOfPage}) }}">{{ numOfPage }}</a>
				</li>
			{% endfor %}
			<li class="page-item {{ (currentPage == nbrOfPages) ? 'disabled' : ''}}">
				<a class="page-link" href="{{ path(path, {slug: slug, page: currentPage + 1}) }}">&raquo;</a>
			</li>
		</ul>
	</nav>

{% endif %}
